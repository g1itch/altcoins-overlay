+                gnomekeyring.ITEM_NETWORK_PASSWORD,
+                address,
+                {'protocol': 'bitmessage',
+                 'address': address},
+                ':'.join(keys), update
+            )
+        except (gnomekeyring.DeniedError, gnomekeyring.CancelledError):
+            pass
+
+    def _fetch_password(self):
+        try:
+            items = gnomekeyring.find_items_sync(
